<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Agregar Producto</h3>
                </div>
                <div class="card-body">
                    <form action="/productos/add" method="post" enctype="multipart/form-data">
                        <div class="input-group mt-2">
                            <label for="PrendaID" class="input-group-text">Prenda</label>
                            <select class="form-control" name="PrendaID" id="PrendaID" required>
                                {{#each prendas}}
                                    <option value="{{this.PrendaID}}">{{this.Nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="input-group mt-2">
                            <label for="Descripcion" class="input-group-text">Descripción</label>
                            <input class="form-control" type="text" name="Descripcion" id="Descripcion" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="Precio" class="input-group-text">Precio</label>
                            <input class="form-control" type="number" name="Precio" id="Precio" step="0.01" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="Categoria" class="input-group-text">Categoría</label>
                            <select class="form-control" name="Categoria" id="Categoria" required>
                                {{#each categorias}}
                                    <option value="{{this.CategoriaID}}">{{this.Nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="input-group mt-2">
                            <label for="Talla" class="input-group-text">Talla</label>
                            <input class="form-control" type="text" name="Talla" id="Talla" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="Stock" class="input-group-text">Stock</label>
                            <input class="form-control" type="number" name="Stock" id="Stock" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="Imagen" class="input-group-text">Imagen</label>
                            <input class="form-control" type="file" name="Imagen" id="Imagen" accept="image/*" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
