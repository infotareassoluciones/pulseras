    <script>
        // Verifica cada 5 minutos si la sesión sigue activa
        setInterval(function() {
            fetch('/check-session')
                .then(response => response.json())
                .then(data => {
                    if (!data.active) {
                        alert('Tu sesión ha expirado. Serás redirigido a la página de inicio de sesión.');
                        window.location.href = '/login';
                    }
                })
                .catch(err => console.error('Error al verificar la sesión:', err));
        }, 5 * 60 * 1000); // 5 minutos
    </script>
